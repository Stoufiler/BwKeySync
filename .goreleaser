project_name: bitwarden-ssh-tool
builds:
  - id: bitwarden-ssh-tool
    main: ./cmd/main.go  # Mettez le chemin de votre fichier principal Go
    goos:
      - linux
      - windows
      - darwin
    goarch:
      - amd64
      - arm64
    env:
      - CGO_ENABLED=1  # Active la toolchain C nécessaire pour le SDK Bitwarden
    ldflags:
      - -s -w  # Réduit la taille des binaires

archives:
  - format: tar.gz
    replacements:
      darwin: macOS
      amd64: x86_64
      arm64: arm64

checksum:
  name_template: 'checksums.txt'

release:
  github:
    owner: Stoufiler
    name: BwKeySync

